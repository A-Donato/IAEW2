@using TuriCorWeb.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <button type="submit" id="login" class="btn btn-default" value="AuthenticationType"> LogIn con OpenAM</button>
        
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    
    <script>
        $(document).ready(function () {
            $('#login').click(function (event) {
                event.preventDefault();
                window.location.href = '@Url.Action("LoginOAuth", "Account")';
            });
        });
    </script>
   
}